# ===========================
# Azure AD (backend usage optional)
# ===========================
AZURE_CLIENT_ID=YOUR_AZURE_AD_APP_CLIENT_ID
AZURE_TENANT_ID=YOUR_AZURE_TENANT_ID
AZURE_CLIENT_SECRET=           # optional; leave empty for user-owns-data flow

# ===========================
# Azure OpenAI
# ===========================
AZURE_OPENAI_ENDPOINT=https://<your-openai-resource>.openai.azure.com/
AZURE_OPENAI_KEY=
AZURE_OPENAI_API_VERSION=2024-05-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-35-turbo            # <-- use your deployed chat model name
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ===========================
# SQL Server
# ===========================
SQL_SERVER=<server>.database.windows.net
SQL_DATABASE=<database>
SQL_USERNAME=<username>
SQL_PASSWORD=
SQL_DRIVER={ODBC Driver 17 for SQL Server}      # keep braces

# ===========================
# Power BI (IDs only; safe to expose)
# ===========================
POWER_BI_WORKSPACE_ID=
POWER_BI_REPORT_ID=
POWER_BI_DEFAULT_PAGE=

# ===========================
# Key Vault (production; optional)
# ===========================
KEY_VAULT_URL=                                    # e.g., https://finance-copilot-kv.vault.azure.net/

# ===========================
# App Settings
# ===========================
ENABLE_AUTH=false
LOG_LEVEL=INFO
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=50
ENVIRONMENT=development
